/**
 * A chest is interesting for two reasons: It is asymmetrical (front texture differs) and should store stuff
 */
{
    "basedOn": "core:wood",
    "attachmentAllowed": false,
    "family": "horizontal",
    // Graphics
    "tiles": {
        "sides": "ChestSides",
        "front": "ChestFront",
        "topBottom": "ChestTopBottom"
    },
    "entity": {
        "prefab": "chest"
    },
    "inventory": {
        "stackable": false,
        "directPickup": true
    }
}
