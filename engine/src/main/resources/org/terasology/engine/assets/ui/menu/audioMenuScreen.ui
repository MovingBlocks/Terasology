{
    "type": "AudioSettingsScreen",
    "skin": "settingsmenu",
    "contents": {
        "type": "relativeLayout",
        "contents": [
            {
                "type": "UILabel",
                "text": "${engine:menu#audio-settings-title}",
                "family": "title",
                "id": "title",
                "layoutInfo": {
                    "height": 48,
                    "position-horizontal-center": {},
                    "position-top": {
                        "target": "TOP",
                        "offset": 48
                    }
                }
            },
            {
                "type": "UIBox",
                "content": {
                    "type": "ColumnLayout",
                    "family": "option-grid",
                    "columns": 2,
                    "column-widths": [0.35, 0.65],
                    "verticalSpacing": 8,
                    "horizontalSpacing": 8,
                    "layoutInfo": {
                        "width": 360,
                        "height": 192,
                        "position-horizontal-center": {},
                        "position-top": {
                            "target": "BOTTOM",
                            "offset": 16,
                            "widget": "title"
                        },
                        "position-bottom": {
                            "target": "TOP",
                            "offset": 32,
                            "widget": "close"
                        }
                    },
                    "contents": [
                        {
                            "type": "UILabel",
                            "text": "${engine:menu#sound-volume}:"
                        },
                        {
                            "type": "UISlider",
                            "id": "sound"
                        },
                        {
                            "type": "UILabel",
                            "text": "${engine:menu#music-volume}:"
                        },
                        {
                            "type": "UISlider",
                            "id": "music"
                        }
                    ]
                },
                "layoutInfo": {
                    "width": 400,
                    "use-content-height": true,
                    "position-horizontal-center": {},
                    "position-top": {
                        "target": "BOTTOM",
                        "widget": "title"
                    },
                    "position-bottom": {
                        "target": "TOP",
                        "offset": 32,
                        "widget": "close"
                    }
                }
            },
            {
                "type": "UIButton",
                "text": "${engine:menu#back}",
                "id": "close",
                "layoutInfo": {
                    "height": 32,
                    "width": 200,
                    "position-horizontal-center": {},
                    "position-bottom": {
                        "target": "BOTTOM",
                        "offset": 48
                    }
                }
            }
        ]
    }
}
