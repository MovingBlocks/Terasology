                                "layoutInfo" : {
                                    "position-horizontal-center" : {},
                                    "position-top" : {
                                        "target" : "BOTTOM",
                                        "offset" : 8,
                                        "widget" : "seed"
                                    },
                                    "position-bottom" : {
                                        "target" : "TOP",
                                        "offset" : 8,
                                        "widget" : "apply"
                                    }
                                }
                            },
                            {
                                "type" : "UIButton",
                                "text" : "${engine:menu#create-preview}",
                                "id" : "apply",
                                "layoutInfo" : {
                                    "height" : 32,
                                    "position-bottom" : {
                                        "target" : "BOTTOM",
                                        "offset": 4
                                    }
                                }
                            }
