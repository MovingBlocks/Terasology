                "contents" : [
                    {
                        "type" : "UIImage",
                        "skin" : "framed_image",
                        "id" : "preview"
                    },
                    {
                        "type" : "RelativeLayout",
                        "family" : "description",
                        "contents" : [
                            {
                                "type" : "UILabel",
                                "text" : "${engine:menu#preview-zoom-factor}:",
                                "id" : "zoomLabel",
                                "layoutInfo" : {
                                    "use-content-height" : true,
                                    "position-horizontal-center" : {},
                                    "position-top" : {
                                        "target" : "TOP"
                                    }
                                }
                            },
                            {
                                "type" : "UISlider",
                                "id" : "zoomSlider",
                                "minimum" : 1.0,
                                "range" : 7.0,
                                "increment" : 1.0,
                                "precision" : 0,
