{
    "type" : "engine:createGameScreen",
    "skin" : "engine:mainMenu",
    "contents" : {
        "type" : "relativeLayout",
        "contents" : [
            {
                "type" : "UIImage",
                "image" : "engine:terasology",
                "id" : "title",
                "layoutInfo" : {
                    "width" : 512,
                    "height" : 128,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "TOP",
                        "offset" : 48
                    }
                }
            },
            {
                "type" : "UILabel",
                "id" : "subtitle",
                "family" : "title",
                "text" : "${engine:menu#create-game-title}",
                "layoutInfo" : {
                    "height" : 48,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "widget" : "title"
                    }
                }
            },
            {
                "type" : "UIBox",
                "content" : {
                    "type" : "ColumnLayout",
                    "columns" : 1,
                    "verticalSpacing" : 4,
                    "horizontalSpacing" : 4,
                    "family" : "left-label",
                    "contents" : [
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
                                {
                                    "type" : "UILabel",
                                    "text" : "${engine:menu#game-name}:",
                                    "layoutInfo" : {
                                        "relativeWidth" : 0.6
                                    }
                                },
                                {
                                    "type" : "UILabel",
                                    "text" : "${engine:menu#world-seed}:"
                                }
                            ]
                        },
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
                                {
                                    "type" : "UIText",
                                    "id" : "worldName",
                                    "layoutInfo" : {
                                        "relativeWidth" : 0.6
                                    }
                                },
                                {
                                    "type" : "UIText",
                                    "id" : "seed"
                                }
                            ]
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "text" : "${engine:menu#gameplay} (${engine:menu#gameplay-info}):"
                        },
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
                                {
                                    "type" : "UIDropdown",
                                    "id" : "gameplay",
                                    "layoutInfo" : {
                                        "relativeWidth" : 0.7
                                    }
                                },
                                {
                                    "type" : "UIButton",
                                    "text" : "${engine:menu#select-modules}",
                                    "id" : "mods"
                                }
                            ]
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "id" : "gameplayDescription"
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "text" : "${engine:menu#select-world-gen} (${engine:menu#select-world-gen-info}):"
                        },
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
                                {
                                    "type" : "UIDropdown",
                                    "id" : "worldGenerator",
                                    "layoutInfo" : {
                                        "relativeWidth" : 0.7
                                    }
                                }
                            ]
                        }
                    ]
                },
                "layoutInfo" : {
                    "width" : 500,
                    "use-content-height" : true,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "offset" : 16,
                        "widget" : "subtitle"
                    }
                }
            },
            {
                "type" : "RowLayout",
                "id" : "actionsRow",
                "horizontalSpacing" : 4,
                "contents" : [
                    {
                        "type" : "UIButton",
                        "text" : "${engine:menu#world-config-preview}",
                        "id" : "preview"
                    },
                    {
                        "type" : "UIButton",
                        "text" : "${engine:menu#back}",
                        "id" : "close"
                    }
                ],
                "layoutInfo" : {
                    "width" : 400,
                    "height" : 32,
                    "position-horizontal-center" : {},
                    "position-bottom" : {
                        "target" : "BOTTOM",
                        "offset" : 48
                    }
                }
            }
        ]
    }
}
