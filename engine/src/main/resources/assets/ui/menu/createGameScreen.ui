{
    "type" : "engine:createGameScreen",
    "skin" : "engine:mainMenu",
    "contents" : {
        "type" : "relativeLayout",
        "contents" : [
            {
                "type" : "UIImage",
                "image" : "engine:terasology",
                "id" : "title",
                "layoutInfo" : {
                    "width" : 512,
                    "height" : 128,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "TOP",
                        "offset" : 48
                    }
                }
            },
            {
                "type" : "UILabel",
                "id" : "subtitle",
                "family" : "title",
                "text" : "${engine:createGame#create-game-title}",
                "layoutInfo" : {
                    "height" : 48,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "widget" : "title"
                    }
                }
            },
            {
			"type" : "UILabel",
                "id" : "gameTypeTitle",
                "family" : "subtitle",
                "text": "${engine:menu#select-singleplayer-game-sub-title}",
                "layoutInfo" : {
                    "height" : 30,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "widget" : "subtitle"
                    }
                }
            },
            {
                "type" : "UIBox",
                "content" : {
                    "type" : "ColumnLayout",
                    "columns" : 1,
                    "verticalSpacing" : 4,
                    "horizontalSpacing" : 4,
                    "family" : "left-label",
                    "contents" : [
                        {
                            "type" : "UILabel",
                            "text" : "${engine:createGame#game-name}:"
                        },
                        {
                            "type" : "UIText",
                            "id" : "worldName"
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "text" : "${engine:createGame#gameplay} (${engine:createGame#gameplay-info}):"
                        },
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
                                {
                                    "type" : "UIDropdownScrollable",
                                    "id" : "gameplay",
                                    "layoutInfo" : {
                                        "relativeWidth" : 0.7
                                    }
                                },
                                {
                                    "type" : "ColumnLayout",
                                    "contents" : [
                                        {
                                            "type" : "UIButton",
                                            "text" : "${engine:createGame#select-modules}",
                                            "id" : "mods"
                                        },
                                        {
                                            "type" : "UILabel",
                                            "text" : "${engine:createGame#advanced-usage}"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "id" : "gameplayDescription"
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "text" : "${engine:createGame#world-seed}:"
                        },
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
                                {
                                    "type" : "UIText",
                                    "id" : "seed",
                                    "layoutInfo" : {
                                        "relativeWidth" : 0.7
                                    }
                                },
                                {
                                    "type" : "UIButton",
                                    "text" : "${engine:createGame#world-config-preview}",
                                    "id" : "previewSeed"
                                }
                            ]
                        },
                        {
                            "type" : "UISpace",
                            "size" : [1, 16]
                        },
                        {
                            "type" : "UILabel",
                            "text" : "${engine:createGame#select-world-gen} (${engine:createGame#select-world-gen-info}):"
                        },
                        {
                            "type" : "RowLayout",
                            "horizontalSpacing" : 16,
                            "contents" : [
	                            {
		                            "type" : "UIDropdownScrollable",
		                            "id" : "worldGenerator",
		                            "layoutInfo" : {
                                        "relativeWidth" : 0.7
                                    }
		                        }
	                        ]
                        }
                    ]
                },
                "layoutInfo" : {
                    "width" : 500,
                    "use-content-height" : true,
                    "position-horizontal-center" : {},
                    "position-top" : {
                        "target" : "BOTTOM",
                        "offset" : 16,
                        "widget" : "subtitle"
                    }
                }
            },
            {
                "type" : "RowLayout",
                "id" : "actionsRow",
                "horizontalSpacing" : 4,
                "contents" : [
                    {
                        "type" : "UIButton",
                        "text" : "${engine:createGame#start-game}",
                        "id" : "play"
                    },
                    {
                        "type" : "UIButton",
                        "text" : "${engine:menu#back}",
                        "id" : "close"
                    }
                ],
                "layoutInfo" : {
                    "width" : 400,
                    "height" : 32,
                    "position-horizontal-center" : {},
                    "position-bottom" : {
                        "target" : "BOTTOM",
                        "offset" : 48
                    }
                }
            }
        ]
    }
}
